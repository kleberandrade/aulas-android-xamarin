<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CalculadoraIMC"
             x:Class="CalculadoraIMC.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
        <Label Text="Nome" />
        <Entry x:Name="nomeEntry" Placeholder="Digite seu nome"/>
        
        <Label Text="Peso (kg)" />
        <Entry x:Name="pesoEntry" Keyboard="Numeric" Placeholder="Digite seu peso (kg)"/>
        
        <Label Text="Altura (m)" />
        <Entry x:Name="alturaEntry" Keyboard="Numeric" Placeholder="Digite sua altura (m)"/>
        
        <Button Text="Calcular IMC" Clicked="OnCalcular" Margin="0,20,0,0"  />
    </StackLayout>

</ContentPage>
